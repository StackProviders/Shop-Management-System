{
  "build": {
    "beforeDevCommand": "vite",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "productName": "Shop Management System",
  "version": "../package.json",
  "identifier": "com.stackprovider.app",
  "plugins": {
    "process": {
      "active": true
    },
    "updater": {
      "windows": {
        "installMode": "passive"
      },
      "endpoints": [
        "https://updater-worker.stackproviders.workers.dev/latest?ttl=300"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDc0OUEwODMxN0I4QURCRUYKUldUdjI0cDdNUWlhZEZjQUR6dVhSOXdUMjU0QzlrWXFHb2poQVhOaUc2cUEzbUYzNTBBdkVzajgK"
    }
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "title": "Shop Management System",
        "width": 800,
        "height": 600,
        "minWidth": 1000,
        "minHeight": 700,
        "resizable": true,
        "maximized": true,
        "decorations": false,
        "center": true,
        "alwaysOnTop": false,
        "transparent": true,
        "shadow": true,
        "dragDropEnabled": true,
        "windowEffects": {
          "effects": ["hudWindow"],
          "radius": 12.0,
          "state": "active"
        }
      }
    ],
    "withGlobalTauri": true
  }
}
