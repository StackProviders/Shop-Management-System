{
  "identifier": "migrated",
  "description": "permissions that were migrated from v1",
  "local": true,
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "process:default",
    "shell:default",
    "store:default",
    "os:default",
    "upload:default",
    "fs:default",
    "cache:default",
    "shell:allow-execute",
    "notification:default",
    "clipboard-manager:default",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://*.stackproviders.workers.dev" },
        { "url": "https://*" }
      ]
    },
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$DOWNLOAD" },
        { "path": "$DOWNLOAD/**/*" },
        { "path": "$TEMP" },
        { "path": "$TEMP/**/*" }
      ]
    },
    {
      "identifier": "shell:allow-open",
      "allow": [
        { "url": "file://**/*.apk" },
        { "url": "file://**/*.exe" },
        { "url": "file://**/*.dmg" },
        { "url": "file://**/*.app" },
        { "url": "file://**/*" }
      ]
    },
    {
      "identifier": "opener:allow-open-url",
      "allow": [
        { "url": "file:*" },
        { "url": "https://*" },
        { "url": "http://*" }
      ]
    },
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        { "path": "$DOWNLOAD/Shop-Management-System-*.apk" },
        { "path": "$APPDATA/files/Download/Shop-Management-System-*.apk" },
        { "path": "$APPDATA/Download/Shop-Management-System-*.apk" }
      ]
    }
  ]
}